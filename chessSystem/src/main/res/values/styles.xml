<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
        <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextView">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 密码输入框 -->
    <style name="EditView_password">
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <!-- 账号输入框 -->
    <style name="EditView_account">
        <item name="android:lines">1</item>
        <item name="android:maxLength">11</item>
        <item name="android:paddingLeft">5dp</item>
        <!-- <item name="android:numeric">integer</item> -->
    </style>
    <!-- 普通输入框 -->
    <style name="EditView_normal">
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="styleName" parent="@style/TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roomRatingBar_yellow" parent="@android:attr/ratingBarStyleSmall">
        <item name="android:progressDrawable">@drawable/ratingbar_yellow</item>
    </style>

    <style name="roomRatingBar_black" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_black</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    
    
     <style name="inputDialog" parent="@android:style/Theme.Dialog">  
		<item name="android:windowFrame">@null</item> <!-- 边框 -->  
		<item name="android:windowNoTitle">true</item> <!-- 无标题 -->
		<item name="android:windowBackground"> @drawable/circle_white_bg</item><!-- 自己想要的背景 -->
		<item name="android:windowIsFloating">true</item>  <!-- 是否浮现在activity之上 -->
		<item name="android:windowIsTranslucent">true</item><!-- 半透明 -->    
<!-- 		<item name="android:background">@null</item>   -->
<!-- 		<item name="android:backgroundDimEnabled">false</item>   --><!-- 模糊 --> 
	</style>
	
    

</resources>