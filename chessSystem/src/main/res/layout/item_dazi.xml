<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/item_my_selector"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/ll_dazi_user"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.chesssystem.widget.CircleImageView
            android:id="@+id/civ_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_default" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal"
            android:layout_marginTop="5dp"
            >
        <TextView
            android:id="@+id/tv_dazi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:maxWidth="50dp"
            android:gravity="right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_heise_504f4f"
            android:textSize="@dimen/small_12sp" />
        <ImageView 
            android:id="@+id/iv_dazi_sex"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/tv_dazi_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/text_color_heise_504f4f"
            android:textSize="@dimen/small_11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dazi_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="75dp"
        android:layout_toRightOf="@id/ll_dazi_user"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />

            <TextView
                android:id="@+id/tv_dazi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />

            <TextView
                android:id="@+id/tv_dazi_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数："
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />

            <TextView
                android:id="@+id/tv_dazi_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容："
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />

            <TextView
                android:id="@+id/tv_dazi_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />

            <TextView
                android:id="@+id/tv_dazi_telphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/small_12sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:id="@+id/iv_dazi_yingyue"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/yingyue"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>

</RelativeLayout>