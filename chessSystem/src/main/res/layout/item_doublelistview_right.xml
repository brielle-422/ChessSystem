<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >

    <LinearLayout
        android:id="@+id/friends_item_header_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginBottom="0.8dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_food_content_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:textColor="@color/text_color_shenhui_677582" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="0.8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_doubleright_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@color/gray" />

        <TextView
            android:id="@+id/tv_doubleright_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_doubleright_image"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            style="@style/TextView"
            android:textColor="@color/text_color_heise_504f4f"
            android:textSize="@dimen/normal_18sp" />

        <TextView
            android:id="@+id/tv_doubleright_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doubleright_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_doubleright_image"
            android:paddingLeft="10dp"
            android:textColor="@color/text_color_shenhui_677582"
            android:textSize="@dimen/normal_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doubleright_sales"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_doubleright_image"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/money"
                android:textColor="@color/text_color_hongse_ff4318"
                android:textSize="@dimen/small_14sp" />

            <TextView
                android:id="@+id/tv_doubleright_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_hongse_ff4318"
                android:textSize="@dimen/normal_18sp" />
        </LinearLayout>
        <com.chesssystem.shoppingcar.CicleAddAndSubView 
            android:id="@+id/bt_add_reduce"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.chesssystem.shoppingcar.CicleAddAndSubView>
    </RelativeLayout>

</LinearLayout>