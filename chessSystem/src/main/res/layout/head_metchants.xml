<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/gray">
    <ListView
        android:id="@+id/lv_metchants_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/item_my_selector"
         >
    </ListView>
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
	<include 
	    android:id="@+id/rl_metchants_goods"
	    layout="@layout/title_goods"
	    />
    <com.chesssystem.widget.GoodsGridView
        android:id="@+id/gv_metchants_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:verticalSpacing="5dp"
        android:layout_marginBottom="2dp">
    </com.chesssystem.widget.GoodsGridView>
	<include 
	    android:id="@+id/rl_metchants_comment"
	    layout="@layout/title_comment"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dp"
	    android:background="@color/white"
	    android:orientation="vertical">
	    <com.chesssystem.widget.TagLayout 
	        android:id="@+id/tg_hotword"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone">
	    </com.chesssystem.widget.TagLayout>
	</LinearLayout>

</LinearLayout>