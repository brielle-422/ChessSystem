<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_pop_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/ll_pop_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="提示"
            android:gravity="center"
            android:textSize="@dimen/normal_18sp"
            android:textColor="@color/text_color_heise_504f4f"/>
        <TextView 
            android:id="@+id/tv_pop_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_color_shenhui_677582"
            android:textSize="@dimen/small_14sp"/>
        <EditText 
            android:id="@+id/edt_pop_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            style="@style/TextView"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_join"
            android:textSize="@dimen/small_14sp"
            android:hint="请输入您的联系方式，如:电话、微信、QQ等"/>
        
        <View 
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray2"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_pop_cancel"
                android:layout_width="0dp"
                android:layout_weight="1" 
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textSize="@dimen/normal_18sp"
            	android:textColor="@color/text_color_heise_504f4f"/>
            <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray2"/>
            <TextView 
                android:id="@+id/tv_pop_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/normal_18sp"
            	android:textColor="@color/text_color_heise_504f4f"/>
        </LinearLayout>
        </LinearLayout>

