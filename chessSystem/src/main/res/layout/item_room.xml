<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/item_my_selector"
        >

        <ImageView
            android:id="@+id/iv_room_image"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@color/gray2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_room_image"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豪华棋牌室"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/normal_18sp" />
            <TextView
                android:id="@+id/tv_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999元/4小时"
                android:textColor="@color/text_color_shenhui_677582"
                android:textSize="@dimen/small_14sp" />
        </LinearLayout>
        <Button 
            android:id="@+id/bt_room_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reserve"
            android:paddingTop="4dp" 	
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/select_btn_yellow"
            android:textColor="@color/white"
            android:textSize="@dimen/small_14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>