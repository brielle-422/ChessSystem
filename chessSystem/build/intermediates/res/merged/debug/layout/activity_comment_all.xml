<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/gray">
    <include 
        layout="@layout/activity_title_white"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <Button 
            android:id="@+id/bt_comment_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="全部(0)"
            android:layout_height="30dp"
            android:textSize="@dimen/small_12sp"
            android:textColor="@color/text_color_huangse_ff8800"
            style="@style/TextView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_transparent_yellow"/>
        <Button 
            android:id="@+id/bt_comment_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="有图(0)"
            android:textSize="@dimen/small_12sp"
            android:textColor="@color/text_color_shenhui_677582"
            style="@style/TextView"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_transparent_black"/>
        <Button 
            android:id="@+id/bt_comment_satisfied"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="满意(0)"
            android:textSize="@dimen/small_12sp"
            android:textColor="@color/text_color_shenhui_677582"
            style="@style/TextView"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_transparent_black"/>
        <Button 
            android:id="@+id/bt_comment_low"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="低分(0)"
            android:textSize="@dimen/small_12sp"
            android:textColor="@color/text_color_shenhui_677582"
            style="@style/TextView"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_transparent_black"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView  
        android:id="@+id/lv_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/item_my_selector">
    </com.handmark.pulltorefresh.library.PullToRefreshListView >    

</LinearLayout>
