<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical" >
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.3dp"
	    android:background="@color/gray2"/>
	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="150dp">
    <ListView
        android:id="@+id/id_list_dirs"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/item_my_selector"
        android:divider="@color/text_color_shenhui_677582"
        android:background="@color/white"
        android:dividerHeight="0.3dp" 
        android:visibility="gone">
    </ListView>
    <RelativeLayout 
        android:id="@+id/rl_pop_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/bt_pop_choice"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/bt_pop_wifi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_transparent_black"
                android:textColor="@color/text_color_shenhui_677582"
                android:textSize="@dimen/small_14sp"
                android:text="无线wifi上网"/>
             <Button 
                 android:id="@+id/bt_pop_park"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_color_shenhui_677582"
                android:textSize="@dimen/small_14sp"
                android:background="@drawable/circle_transparent_black"
                android:text="提供停车位"/>
              <Button 
                android:id="@+id/bt_pop_bill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_color_shenhui_677582"
                android:textSize="@dimen/small_14sp"
                android:background="@drawable/circle_transparent_black"
                android:text="提供小吃"/>
        </LinearLayout>
        <Button 
            android:id="@+id/bt_pop_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_16sp"
            android:textColor="@color/text_color_huangse_ff8800"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circle_transparent_yellow"
            />
    </RelativeLayout>
	</FrameLayout>
    <LinearLayout
        android:id="@+id/ll_pop_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>