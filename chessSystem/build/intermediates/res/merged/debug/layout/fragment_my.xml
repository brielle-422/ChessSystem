<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/main_green" >

        <LinearLayout
            android:id="@+id/ll_userinfor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_green"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <com.chesssystem.widget.CircleImageView
                android:id="@+id/my_faces"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/avatar_default" />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:gravity="center_vertical"
			    android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/TextView"
                android:maxEms="6"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_16sp"
                android:textColor="@color/white" />
            <ImageView 
                android:id="@+id/iv_my_sex"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_btn_white"
            android:text="@string/login_register"
            android:layout_gravity="center"
            android:textColor="@color/text_color_huangse_ff8800" 
            android:visibility="gone"/>
    </FrameLayout>
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/ll_my_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_order"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/myOrder"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
         <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_refund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_refund"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/myRefund"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
         <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_collection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/myCollection"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_comment"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/myEvaluate"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    
       
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/ll_my_dazi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_dazi"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/myDazi"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
         <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_repair"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repair"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/repair"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
         <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/setting"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/ll_my_about"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/item_my_selector"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_14sp"
                android:textColor="@color/text_color_heise_504f4f"
                android:text="@string/shopJoin"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_my_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/item_my_selector"
        android:textSize="@dimen/normal_16sp"
        android:textColor="@color/text_color_huangse_ff8800"
        />
       

</LinearLayout>