<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle_white_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/text_color_shenhui_677582"
            android:textSize="@dimen/large_22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/text_color_shenhui_677582" />

        <TextView
            android:id="@+id/tv_comment_haoping"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="好评"
            android:textColor="@color/text_color_hongse_ff4318"
            android:textSize="@dimen/large_22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/text_color_shenhui_677582" />

        <TextView
            android:id="@+id/tv_comment_zhongping"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="中评"
            android:textColor="@color/text_color_huangse_ff8800"
            android:textSize="@dimen/large_22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/text_color_shenhui_677582" />

        <TextView
            android:id="@+id/tv_comment_chaping"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="差评"
            android:textColor="@color/blue"
            android:textSize="@dimen/large_22sp" />
    </LinearLayout>
