<?xml version="1.0" encoding="utf-8"?>
       <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_doubleright_reduce"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/reduce" />

            <TextView
                android:id="@+id/tv_doubleright_number"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/text_color_heise_504f4f"
                android:textSize="@dimen/normal_18sp" />

            <ImageView
                android:id="@+id/iv_doubleright_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add" />
        </LinearLayout>
